{
    "agent": {
      "metrics_collection_interval": 10,
      "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
    },
    "metrics": {
      "namespace": "WebAppMetrics",
      "metrics_collected": {
        "cpu": {
          "resources": ["*"],
          "measurement": [
            {"name": "cpu_usage_idle", "unit": "Percent"},
            {"name": "cpu_usage_user", "unit": "Percent"},
            {"name": "cpu_usage_system", "unit": "Percent"}
          ],
          "metrics_collection_interval": 10
        },
        "mem": {
          "measurement": [
            {"name": "mem_used_percent", "unit": "Percent"},
            {"name": "mem_free", "unit": "Bytes"}
          ],
          "metrics_collection_interval": 10
        },
        "disk": {
          "resources": ["/"],
          "measurement": [
            {"name": "disk_used_percent", "unit": "Percent"}
          ],
          "metrics_collection_interval": 60
        },
        "net": {
          "resources": ["eth0"],
          "measurement": [
            {"name": "net_bytes_sent", "unit": "Bytes"},
            {"name": "net_bytes_recv", "unit": "Bytes"}
          ],
          "metrics_collection_interval": 60
        },
        "statsd": {
          "service_address": ":8125",
          "metrics_aggregation_interval": 60
        }
      },
      "append_dimensions": {
        "ImageId": "${aws:ImageId}",
        "InstanceId": "${aws:InstanceId}",
        "InstanceType": "${aws:InstanceType}"
      }
    },
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              "file_path": "/var/log/syslog",
              "log_group_name": "syslog",
              "log_stream_name": "{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "/var/log/cloud-init.log",
              "log_group_name": "cloud-init.log",
              "log_stream_name": "{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "/path/to/your/application.log",
              "log_group_name": "webapp-logs",
              "log_stream_name": "{instance_id}",
              "timezone": "UTC"
            }
          ]
        }
      },
      "force_flush_interval": 5
    }
  }